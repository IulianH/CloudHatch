# Environment variables for CloudHatch Frontend
# Copy this file to .env.local and update the values as needed

# Next.js Configuration
NODE_ENV=development
PORT=3000

# API Configuration
# These are now relative paths that will be resolved dynamically at runtime
# NEXT_PUBLIC_LOGIN_URL=/api/Auth/login
# NEXT_PUBLIC_REFRESH_URL=/api/Auth/refresh
# NEXT_PUBLIC_LOGOUT_URL=/api/Auth/logout
# NEXT_PUBLIC_PROFILE_URL=/api/Users/profile

# Base URL for server-side rendering (optional)
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Authentication (if using external auth provider)
# NEXT_PUBLIC_AUTH_DOMAIN=your-auth-domain
# NEXT_PUBLIC_AUTH_CLIENT_ID=your-client-id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
